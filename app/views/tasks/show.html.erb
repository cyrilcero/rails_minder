<h1><%= @category.name %></h1>
<h1><%= @task.name %></h1>
<h1><%= @task.description %></h1>
<div class="flex gap-2">
  <div class="bg-slate-600 text-white px-4 py-2 rounded-lg">
    <%= link_to 'BACK', category_path(@category) %>
  </div>
  <div class="bg-red-600 text-white px-4 py-2 rounded-lg">
    <%= link_to "Delete", [@task.category, @task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %>
  </div>
</div>

<div class="w-full space-y-2">
  <h1 class="font-bold text-xl pb-2">Add task to <%= @category.name %>:</h1>
  <div class="w-full">
    <%= form_with model: [ @category, task ] do |form| %>
      <% if task.errors.any? %>
        <ul class="font-bold pb-4">
          <% task.errors.full_messages.each do |message| %>
            <li class="text-red-400">‚ùå <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="w-full h-full flex flex-col justify-center gap-3">
      <div class="h-full w-full flex flex-col gap-2">
        <div class="flex flex-col">
          <%= form.label :name, "Name:", class: "font-thin" %>
          <%= form.text_field :name, class: "rounded-lg w-full border-2 border-slate-800" %>
        </div>
        <div class="flex flex-col">
          <%= form.label :target_completion_date, "Due Date:", class: "font-thin" %>
          <%= form.date_field :target_completion_date, class: "rounded-lg w-full border-2 border-slate-800" %>
        </div>
      </div>
      <div>
        <%= form.button "Create Task", class: "rounded-lg bg-green-300 py-3 px-6 font-bold w-full text-center cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
</div>
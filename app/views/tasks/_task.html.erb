<%= form_with model: task, url: [task.category, task], method: :patch do |form| %>
  <div class="bg-slate-300 p-4 rounded-lg shadow-sm flex justify-between">
    <div class="field w-full flex items-center gap-2">
      <%= form.check_box :completed, as: :boolean, onchange: "this.form.submit()", class: "appearance-none w-4 h-4 border-2 border-blue-800 rounded-sm bg-white border" %>
      <div class="<%= task.completed ? "italic line-through" : "" %>">
        <%= form.label :completed, task.name %>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_category_task_path(task.category_id, task.id) do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <%= link_to [task.category, task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} do %>
        <i class="fa-solid fa-trash-can text-red-500"></i>
      <% end %>
    </div>
  </div>
<% end %>  
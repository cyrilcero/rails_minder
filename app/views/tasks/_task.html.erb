<%= form_with model: task, url: [task.category, task], class: "contents", method: :patch do |form| %>
  <div class="bg-slate-300 rounded-lg shadow-sm flex justify-between border-2 border-slate-800">
    <div class="flex items-center gap-2">
      <div class="pl-4">
        <%= form.check_box :completed, as: :boolean, onchange: "this.form.submit()", class: "appearance-none w-4 h-4 border-2 border-slate-800 rounded-full bg-white border" %>
      </div>
      <div class="<%= task.completed ? "italic line-through" : "w-fit grow-1" %>">
        <%= task.name %>
      </div>
    </div>
    <div class="flex items-center gap-2 py-2 pr-4">
      <%= link_to edit_category_task_path(task.category_id, task.id) do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
      <%= link_to [task.category, task], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} do %>
        <i class="fa-solid fa-trash-can text-red-500"></i>
      <% end %>
    </div>
  </div>
<% end %>

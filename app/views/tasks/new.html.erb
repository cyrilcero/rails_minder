<div >
  <h1 class="font-bold">Add task:</h1>
  <div class="w-full">
    <%= form_with model: [ @category, @category.tasks.build ] do |form| %>
      <div class="w-full h-full flex flex-col justify-center gap-3 sm:gap-[1.5rem]">
        <% if @category.errors.any? %>
          <div class="flex flex-col justify-center">
            <% @category.errors.full_messages.each do |message| %>
              <p class="text-red-500 lowercase font-semibold">
                ** <%= message %>
              </p>
            <% end %>
          </div>
        <% end %>
        <div class="h-full w-full flex flex-col gap-2">
          <div class="flex flex-col">
            <%= form.label "Name:" %>
            <%= form.text_field :name %>
          </div>
          <div class="flex flex-col">
            <%= form.label "Desc:" %>
            <%= form.text_area :description %>
          </div>
          <div class="flex flex-col">
            <%= form.label "Due Date:" %>
            <%= form.date_field :target_completion_date %>
          </div>
        </div>
        <div>
          <%= form.button "Submit", class:"actions" %>
          <%= link_to "Back", :back, class:"actions" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="flex flex-col justify-center mx-auto w-3/4 sm:w-1/3 mt-6 bg-slate-200 rounded-lg p-4">
  <div class="pb-6">
    <h1 class="text-2xl font-bold">Edit task: <span class="text-lg font-normal"><%= @task.name %></span></h1>
  </div>
  <div class="w-full">
    <%= form_with model: @task, url: category_task_path(@category, @task), method: :patch do |form| %>
      <div class="w-full h-full flex flex-col justify-center gap-4">
        <% if @category.errors.any? %>
          <div class="flex flex-col justify-center">
            <% @category.errors.full_messages.each do |message| %>
              <p class="text-red-500 lowercase font-semibold">
                <%= message %>
              </p>
            <% end %>
          </div>
        <% end %>
        <div class="h-full w-full flex flex-col gap-2">
          <div class="">
            <%= form.label :name, "Task:", class: "font-thin" %>
            <%= form.text_field :name, class: "rounded-lg w-full border-2 border-slate-800"  %>
          </div>
          <div class="">
            <%= form.label :target_completion_date, "Due Date:", class: "font-thin" %>
            <%= form.date_field :target_completion_date, class: "rounded-lg w-full border-2 border-slate-800"  %>
          </div>
          <div class="">
            <%= form.check_box :completed, as: :boolean, class: "appearance-none w-4 h-4 border-2 border-slate-800 rounded-full bg-white border"  %>
            <%= form.label :completed, "Done", class: "font-thin"  %>
          </div>
        </div>
        <div class="flex flex-col">
          <%= form.button "Update Task", class: "rounded-lg py-3 px-5 bg-green-300 font-medium cursor-pointer" %>
          <%= link_to "Back to category", category_path(@category), class: "rounded-lg py-3 px-5 font-medium text-center" %>
          <%= link_to "Home", root_path, class: "rounded-lg py-3 px-5 font-medium text-center" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

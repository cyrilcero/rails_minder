<div class="bg-gray-100 flex flex-col rounded-lg p-4 mt-6 w-1/3 shadow-md">
  <h2 class="font-bold text-3xl py-4 text-center">ðŸ”‘ Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field pb-2">
      <%= f.label :email, class: "font-thin" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg w-full" %>
    </div>
    <div class="field pb-2">
      <%= f.label :password, class: "font-thin" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg w-full" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field pb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "font-thin text-xs" %>
      </div>
    <% end %>
    <hr class="m-4">
    <div class="flex flex-col gap-2 items-center justify-center mt-2">
      <div class="rounded-lg bg-green-300 py-3 px-6 font-bold w-full text-center">
        <%= f.button "Log in" %>
      </div>
      <%= link_to "Don't have an account? Sign up", new_user_registration_path, class: "flex rounded-lg py-3 px-6 w-full gap-2 items-center justify-center" %>
    </div>
  </div>
<% end %>
</div>

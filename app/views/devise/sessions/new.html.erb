<div class="bg-gray-100 flex flex-col rounded-lg p-4 mt-6 w-3/4 sm:w-1/3 shadow-md border-2 border-slate-800">
  <h2 class="font-bold text-3xl py-3">ðŸ”‘</h2>
  <h2 class="font-bold text-4xl pb-6 text-slate-700">Log In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col field pb-2">
      <%= f.label :email, class: "font-thin" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg w-full border-2 border-slate-800" %>
    </div>
    <div class="flex flex-col field pb-2">
      <%= f.label :password, class: "font-thin" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg w-full border-2 border-slate-800" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="flex field pb-2 gap-2 items-center">
        <%= f.check_box :remember_me, class: "appearance-none w-4 h-4 border-2 border-slate-800 rounded-full bg-white border" %>
        <%= f.label :remember_me, class: "font-thin" %>
      </div>
    <% end %>
    <hr class="m-4">
    <div class="flex flex-col gap-2 items-center justify-center mt-2">
      <%= f.button "Login", class: "rounded-lg bg-green-300 py-3 px-6 font-bold w-full text-center" %>
      <%= link_to "Don't have an account? Sign up", new_user_registration_path, class: "flex rounded-lg py-3 px-6 w-full gap-2 items-center justify-center text-center" %>
    </div>
  </div>
<% end %>
</div>

<div class="bg-gray-100 flex flex-col rounded-lg p-4 mt-6 w-1/4 shadow-md border-2 border-slate-800">
  <h2 class="font-bold text-3xl py-3">ğŸ‘‹</h2>
  <h2 class="font-bold text-4xl pb-6 text-slate-700">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col field pb-2">
      <%= f.label :email, class: "font-thin" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg w-full border-2 border-slate-800"  %>
    </div>
    <div class="flex flex-col field pb-2">
      <div class="flex items-center">
        <%= f.label :password, class: "font-thin "  %>
        <% if @minimum_password_length %>
          <span class="text-sm italic font-thin">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg w-full border-2 border-slate-800"  %>
    </div>
    <div class="flex flex-col field pb-2">
      <%= f.label :password_confirmation, class: "font-thin"  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg w-full border-2 border-slate-800"  %>
    </div>
    <hr class="m-4">
    <div class="flex flex-col gap-2 items-center justify-center mt-2">
      <%= f.submit "Sign up", class: "rounded-lg bg-green-300 py-3 px-6 font-bold w-full text-center cursor-pointer" %>
      <%= link_to "Already have an account? Log in", new_user_session_path, class: "flex rounded-lg py-3 px-6 w-full gap-2 items-center justify-center" %>
    </div>
  <% end %>
</div>

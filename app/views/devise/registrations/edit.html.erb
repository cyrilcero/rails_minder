<div class="bg-gray-100 flex flex-col rounded-lg p-4 mt-6 w-3/4 sm:w-1/3 shadow-md border-2 border-slate-800">
  <h2 class="font-bold text-3xl py-3">✏️</h2>
  <h2 class="font-bold text-4xl pb-6 text-slate-700">Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col pb-2">
      <%= f.label :email, class: "font-thin"  %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg w-full border-2 border-slate-800" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="flex flex-col pb-2">
      <%= f.label :password, class: "font-thin"  %> <i class="font-thin text-sm">(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg w-full border-2 border-slate-800" %>
      <% if @minimum_password_length %>
        <em class="font-thin text-sm"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="flex flex-col pb-2">
      <%= f.label :password_confirmation, class: "font-thin"  %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg w-full border-2 border-slate-800" %>
    </div>
    <div class="flex flex-col pb-2">
      <%= f.label :current_password, class: "font-thin"  %> <i class="font-thin text-sm">(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "rounded-lg w-full border-2 border-slate-800" %>
    </div>
    <div class="actions">
      <%= f.submit "Update my profile", class: "rounded-lg bg-green-300 py-3 px-6 font-bold w-full text-center cursor-pointer" %>
    </div>
  <% end %>
  <hr class="flex flex-col gap-2 items-center justify-center mt-2">
  <div>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Delete your account?", turbo_confirm: "Delete your account?" }, method: :delete, class: "rounded-lg bg-red-300 py-3 px-6 font-bold w-full text-center cursor-pointer"  %>
    <%= link_to "Back", :back, class: "flex rounded-lg py-3 px-6 w-full gap-2 items-center justify-center text-center"  %>
  </div>
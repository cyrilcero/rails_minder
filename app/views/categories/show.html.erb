<div class="mx-auto w-2/3">
  <div class="flex flex-col gap-2">
    <div class="flex justify-between">
      <h1 class="text-3xl font-extrabold"><%= @category.name %></h1>
      <div class="flex items-center gap-2">
        <%= link_to new_category_task_path(@category), class: "rounded-lg bg-green-100 py-1 px-2" do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
        <%= link_to edit_category_path(@category), class: "rounded-lg  bg-gray-100 py-1 px-2" do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= button_to category_path(@category), method: :delete, class: "rounded-lg  bg-red-100 py-1 px-2" do%>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    </div>
    <% @category.tasks.each do |task| %>
      <%= render partial: 'task', locals: { category: @category, task: task } %>
    <% end %>
  </div>
